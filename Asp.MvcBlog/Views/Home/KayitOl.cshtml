@using Asp.MvcBlog.Models.ViewModal
@model Kayit
@{
    ViewBag.Title = "KayıtOl";
}
<link href="~/Content/Giris.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4 outlined">
                <h1 class="text-center login-title">Kayıt Formu</h1>
                <div class="account-wall">
                    <form class='form-signin' action="{% url 'login' %}" method='POST'>
                        <!--{% csrf_token %}-->
                        @Html.ValidationSummary(false)
                        <br />
                        <div class="input-group ">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı adınız" })
                        </div>


                        <div class="input-group ">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.EMail, new { @class = "form-control", placeholder = "E-Posta adresiniz" })
                        </div>


                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", placeholder = "Şifre ", type = "password" })
                        </div>

                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.SifreTekrar, new { @class = "form-control", placeholder = "Şifre Tekrar", type = "password" })
                        </div>
                        <div class="form-group">
                            <button class='btn btn-lg btn-primary btn-block' type='submit'>Kayıt Ol</button>
                        </div>
                        <span class="clearfix"></span>
                    </form>
                </div>

            </div>
        </div>
    </div>

}
<script>
    $(function () {
        $("footer").hide();
    });
  
</script>

